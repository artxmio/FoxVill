<Page x:Class="FoxVill.View.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoxVill.View.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:FoxVill.ViewModel"
      mc:Ignorable="d" 

      Margin="100 125"
      d:Background="White"
      Title="CartPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button
            Background="Transparent" 
            Width="71"
            Height="71"
            Padding="0"
            BorderThickness="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            materialDesign:ButtonAssist.CornerRadius="50"
            Click="Button_Click">

            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Image Width="71"
                Source="/Resources/Images/Png/arrow_to_left.png"/>

        </Button>

        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                Margin="10 0">
            <StackPanel>
                <TextBlock Text="Корзина" 
                           FontSize="70" 
                           FontWeight="Bold" 
                           Margin="40 10 0 10" 
                           Style="{StaticResource BaseTextBlockStyle}"/>

                <ListView ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black"
                                        BorderThickness="2"
                                        CornerRadius="15"
                                        Margin="30 0 0 0"
                    
                                        HorizontalAlignment="Center">
                                <Grid Margin="5">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Колесо обозрения"
                               FontSize="50" 
                               Margin="10"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Grid.Column="0"/>

                                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 0"
                                Grid.Column="1">
                                        <Button
                            Background="Transparent" 
                            Width="40"
                            Height="40"
                            Margin="0"
                            Padding="0"
                            BorderThickness="2"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="15">

                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="Red"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <Button.Effect>
                                                <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="1"
                                                  Opacity="0.4" />
                                            </Button.Effect>

                                            <Image Source="/Resources/Images/Png/minus.png"
                                   Width="20"/>
                                        </Button>

                                        <TextBlock Text="1"
                                   Margin="15"
                                   FontSize="50"
                                   Style="{StaticResource BaseTextBlockStyle}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                                        <Button
                            Background="Transparent" 
                            Width="40"
                            Height="40"
                            Margin="0"
                            Padding="0"
                            BorderThickness="2"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="15">

                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="Red"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <Button.Effect>
                                                <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="1"
                                                  Opacity="0.4" />
                                            </Button.Effect>

                                            <Image Source="/Resources/Images/Png/plus.png"
                                   Width="20"/>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                Grid.Column="2">
                                        <TextBlock Text="500"
                               FontSize="50" 
                               Margin="0 0 0 0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"/>
                                        <TextBlock Text="BYN"
                               FontSize="50" 
                               Margin="10"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"/>

                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                    <ListItem/>
                </ListView>

            </StackPanel>
        </Border>

        <Border Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                VerticalAlignment="Top"
                Height="340">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Оплата"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="70"
                           HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/>


                <Button Style="{StaticResource BaseButtonStyle}"
                        Content="Картой"
                        Grid.Column="0"
                        Grid.Row="1"
                        Margin="20 0 0 0">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                              BlurRadius="15"
                                              ShadowDepth="1"
                                              Opacity="0.4" />
                    </Button.Effect>
                </Button>

                <Button Style="{StaticResource BaseButtonStyle}"
                            Content="Наличными на кассе"
                            FontSize="27"
                            Grid.Column="1"
                            Grid.Row="1"
                        Margin="20 0 20 0">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                              BlurRadius="15"
                                              ShadowDepth="1"
                                              Opacity="0.4" />
                    </Button.Effect>
                </Button>

                <TextBlock Text="Итого"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="45"
                           Grid.Column="0"
                           Grid.Row="2"
                           Margin="20 0 0 0"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            Grid.Row="2">
                    <TextBlock Text="2000"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontSize="45"
                           
                           Margin="20 0 20 0"/>
                    <TextBlock Text="BYN"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="45"/>
                </StackPanel>


            </Grid>
        </Border>
    </Grid>
</Page>
