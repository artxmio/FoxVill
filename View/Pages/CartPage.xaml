<Page x:Class="FoxVill.View.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoxVill.View.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:FoxVill.ViewModel"
      mc:Ignorable="d" 

      Margin="100 125"
      d:Background="White"
      Title="CartPage"
      d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button
            Background="Transparent" 
            Width="71"
            Height="71"
            Padding="0"
            BorderThickness="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            materialDesign:ButtonAssist.CornerRadius="50"
            Click="Button_Click">

            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Image Width="71"
                Source="/Resources/Images/Png/arrow_to_left.png"/>

        </Button>

        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                Margin="10 0"
                MinWidth="700">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Корзина" 
                           FontSize="70" 
                           FontWeight="Bold" 
                           Margin="40 10 0 10" 
                           Grid.Row="0"
                           Style="{StaticResource BaseTextBlockStyle}"/>

                <ListView ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          Grid.Row="1"
                          x:Name="listView"
                          ItemsSource="{Binding CartItems}">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel ScrollUnit="Pixel" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="25 5 15 0" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="RenderTransformOrigin" Value="0.7,0.7" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem>
                                            <MenuItem.Header>
                                                <TextBlock Text="Убрать из корзины"
                                                           FontSize="20"
                                                           Style="{StaticResource BaseTextBlockStyle}"/>
                                            </MenuItem.Header>
                                        </MenuItem>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">

                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>

                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.05" Duration="0:0:0.1" />
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.05" Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>

                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.1" />
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <Border BorderBrush="Black"
                                        BorderThickness="2"
                                        CornerRadius="15">

                                <Grid Margin="5">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Product.Title}"
                                               FontSize="50" 
                                               Margin="10"
                                               Style="{StaticResource BaseTextBlockStyle}"
                                               Grid.Column="0"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0 0 0 0"
                                                Grid.Column="1">

                                        <Button
                                                Background="Transparent" 
                                                Width="40"
                                                Height="40"
                                                Margin="0"
                                                Padding="0"
                                                BorderThickness="2"
                                                HorizontalAlignment="Right"
                                            Command="{Binding DataContext.DecreaseCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            materialDesign:ButtonAssist.CornerRadius="15">

                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="Red"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <Button.Effect>
                                                <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="1"
                                                  Opacity="0.4" />
                                            </Button.Effect>

                                            <Image Source="/Resources/Images/Png/minus.png"
                                                   Width="20"/>
                                        </Button>

                                        <TextBlock Text="{Binding Quantity}"
                                                   Margin="15"
                                                   FontSize="50"
                                                   Style="{StaticResource BaseTextBlockStyle}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <Button
                                            Background="Transparent" 
                                            Width="40"
                                            Height="40"
                                            Margin="0"
                                            Padding="0"
                                            BorderThickness="2"
                                            HorizontalAlignment="Right"
                                            materialDesign:ButtonAssist.CornerRadius="15"
                                            Command="{Binding DataContext.IncreaseCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}">

                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="Red"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <Button.Effect>
                                                <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="1"
                                                  Opacity="0.4" />
                                            </Button.Effect>

                                            <Image Source="/Resources/Images/Png/plus.png"
                                                Width="20"/>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="2">
                                        <TextBlock Text="{Binding Product.Price}"
                                               FontSize="50" 
                                               Margin="0 0 0 0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource BaseTextBlockStyle}"/>
                                        <TextBlock Text="BYN"
                                               FontSize="50" 
                                               Margin="10"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource BaseTextBlockStyle}"/>

                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <d:ListBoxItem></d:ListBoxItem>

                </ListView>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                VerticalAlignment="Top"
                Height="340">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Оплата"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="70"
                           HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/>


                <Button Style="{StaticResource BaseButtonStyle}"
                        Content="Картой"
                        x:Name="btn1"
                        Grid.Column="0"
                        Grid.Row="1"
                        Margin="20 0 0 0" Click="btn1_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                              BlurRadius="15"
                                              ShadowDepth="1"
                                              Opacity="0.4" />
                    </Button.Effect>
                </Button>

                <Button Style="{StaticResource BaseButtonStyle}"
                            Content="Наличными на кассе"
                            FontSize="27"
                            x:Name="btn2"
                            Grid.Column="1"
                            Grid.Row="1"
                        Margin="20 0 20 0" Click="btn2_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                              BlurRadius="15"
                                              ShadowDepth="1"
                                              Opacity="0.4" />
                    </Button.Effect>
                </Button>

                <TextBlock Text="Итого"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="45"
                           Grid.Column="0"
                           Grid.Row="2"
                           Margin="20 0 0 0"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            Grid.Row="2">
                    <TextBlock Text="2000"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontSize="45"
                           
                           Margin="20 0 20 0"/>
                    <TextBlock Text="BYN"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="45"/>
                </StackPanel>

                <Button Style="{StaticResource BaseButtonStyle}"
                        Content="Оплатить"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"/>
            </Grid>
        </Border>
    </Grid>
</Page>
