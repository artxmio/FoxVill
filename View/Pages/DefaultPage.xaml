<Page x:Class="FoxVill.View.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoxVill.View.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="DefultPage"
      VerticalAlignment="Center"
      HorizontalAlignment="Center">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            CornerRadius="15"
            Background="#f6f6f6"
            Width="500"
            Height="275">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                          BlurRadius="15"
                          ShadowDepth="1"
                          Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Добро пожаловать в мир радости и незабываемых приключений!"
                       Style="{StaticResource BaseTextBlockStyle}"
                       FontSize="40"
                       Margin="10"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>

            <StackPanel Grid.Row="1" 
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Style="{StaticResource BaseButtonStyle}"
                        Width="200"
                        Content="Войти" 
                        Click="OpenAuthWindow"/>
                <Button Style="{StaticResource BaseButtonStyle}"
                        Width="200"
                        Margin="10 0 0 0"
                        Content="Новый аккаунт"
                        FontSize="30" 
                        Click="OpenRegistrationWindow"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>