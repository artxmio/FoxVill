<Page x:Class="FoxVill.View.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoxVill.View.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:FoxVill.ViewModel"
      mc:Ignorable="d" 
      Title="RegPage"
      
      d:DataContext="{d:DesignInstance vm:AuthorizationWindowViewModel}">

    <Page.Resources>
        <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/FoxVill;component/Resources/Fonts/Caveat.ttf#Caveat"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="10 0 10 0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="FontSize" Value="37"/>
            <Setter Property="SelectionBrush" Value="White" />
            <Setter Property="FontFamily" Value="pack://application:,,,/FoxVill;component/Resources/Fonts/Caveat.ttf#Caveat"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="Black" />
                </Trigger>
            </Style.Triggers>

        </Style>

        <Style x:Key="BaseButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatDarkButton}">
            <Setter Property="Width" Value="255" />
            <Setter Property="Height" Value="62" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="35" />
            <Setter Property="FontFamily" Value="pack://application:,,,/FoxVill;component/Resources/Fonts/Caveat.ttf#Caveat" />
        </Style>

    </Page.Resources>

    <Border VerticalAlignment="Top" 
        HorizontalAlignment="Center"
        CornerRadius="15"
        Background="#f6f6f6">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                      BlurRadius="15"
                      ShadowDepth="1"
                      Opacity="0.4"/>
        </Border.Effect>

        <Grid Height="700" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button
                Background="Transparent" 
                Width="30"
                Height="30"
                Padding="0"
                Margin="10"
                BorderThickness="0"
                HorizontalAlignment="Right"
                Click="AboutClick">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="30"
                   Source="/Resources/Images/Png/info.png"/>
            </Button>

            <StackPanel Grid.Row="1"
            Width="650"
            Height="650">

                <TextBlock Style="{StaticResource BaseTextBlockStyle}"
           Text="Регистрация"
           HorizontalAlignment="Center"
           FontSize="90"/>

                <TextBlock Style="{StaticResource BaseTextBlockStyle}"
           Text="Электронная почта:"
           Margin="66 0 0 0"
           FontSize="35"/>

                <TextBox Style="{StaticResource BaseTextBoxStyle}"
             Margin="66 0 66 33">
                    <TextBox.Effect>
                        <DropShadowEffect Color="Black"
                      BlurRadius="15"
                        ShadowDepth="1"
                        Opacity="0.4" />
                    </TextBox.Effect>
                </TextBox>

                <TextBlock Style="{StaticResource BaseTextBlockStyle}"
               Text="Пароль:"
               Margin="66 0 0 0"
               FontSize="35"/>

                <TextBox Style="{StaticResource BaseTextBoxStyle}"
             Margin="66 0 66 33">
                    <TextBox.Effect>
                        <DropShadowEffect Color="Black"
                          BlurRadius="15"
                            ShadowDepth="1"
                            Opacity="0.4"/>
                    </TextBox.Effect>
                </TextBox>

                <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                      Text="Повторите пароль:"
                      Margin="66 0 0 0"
                      FontSize="35"/>

                <TextBox Style="{StaticResource BaseTextBoxStyle}"
                         Margin="66 0 66 33">
                    <TextBox.Effect>
                        <DropShadowEffect Color="Black"
                         BlurRadius="15"
                           ShadowDepth="1"
                           Opacity="0.4"/>
                    </TextBox.Effect>
                </TextBox>

                <StackPanel Orientation="Horizontal"
                Margin="66 0 0 33">
                    <Button Style="{StaticResource BaseButtonStyle}"
                Content="Продолжить"
                Margin="0 0 10 0">
                        <Button.Effect>
                            <DropShadowEffect Color="Black"
                              BlurRadius="15"
                            ShadowDepth="1"
                            Opacity="0.4" />
                        </Button.Effect>
                    </Button>
                    <Button Style="{StaticResource BaseButtonStyle}"
                Content="Отмена">
                        <Button.Effect>
                            <DropShadowEffect Color="Black"
                              BlurRadius="15"
                              ShadowDepth="1"
                              Opacity="0.4" />
                        </Button.Effect>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                Margin="66 0 0 0">
                    <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                   Text="Уже есть аккаунт?"
                   Margin="0 0 10 0"/>

                    <TextBlock Foreground="Blue" Text="Быстрее заходи" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                <Setter Property="TextDecorations" Value="None" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                   Text=":)"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Page>
