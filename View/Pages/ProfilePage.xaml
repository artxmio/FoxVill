<Page x:Class="FoxVill.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:FoxVill.ViewModel"
      mc:Ignorable="d" 

      Title="ProfilePage"
      Margin="330 120 0 0"
      d:Background="White"
      d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button
            Background="Transparent" 
            Width="71"
            Height="71"
            Padding="0"
            BorderThickness="2"
            HorizontalAlignment="Left"
            materialDesign:ButtonAssist.CornerRadius="50"
            Click="Button_Click">

            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Image Width="71"
                Source="/Resources/Images/Png/arrow_to_left.png"/>

        </Button>

        <Border Grid.Column="0"
                Grid.Row="1"
                Grid.RowSpan="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                Height="475"
                Width="450"
                Margin="0 10"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Background="#F6F6F6">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="1"
                                  Opacity="0.4" />
            </Border.Effect>
            <StackPanel Orientation="Vertical">
                <Image Source="/Resources/Images/Png/user_profile.png"
                   Width="280"
                   Height="280"
                   Stretch="Fill"
                       Margin="35"/>


                <Button
                    Background="Transparent" 
                    Width="375"
                    Height="47"
                    Padding="0"
                    BorderThickness="2"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    HorizontalAlignment="Center">

                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <StackPanel Orientation="Horizontal" Width="371">
                        <Image Width="46"
                               Source="/Resources/Images/Png/bank.png"
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="Способы оплаты"
                                   Style="{StaticResource BaseTextBlockStyle}"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="35 0 0 0"
                                   FontSize="35"/>
                    </StackPanel>

                </Button>
                <Button
                    Background="Transparent" 
                    Width="375"
                    Height="47"
                    Padding="0"
                    BorderThickness="2"
                    Margin="10"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    HorizontalAlignment="Center">

                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <StackPanel Orientation="Horizontal" Width="371">
                        <Image Width="46" Height="35"
                               Source="/Resources/Images/Png/data.png"
                               />
                        <TextBlock Text="Личные данные"
                               Style="{StaticResource BaseTextBlockStyle}"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="35 0 0 0"
                               FontSize="35"/>
                    </StackPanel>

                </Button>

            </StackPanel>
        </Border>


        <Button
            Background="#F6F6F6"
            Padding="0"
            BorderThickness="2"
            Margin="10 10 10 0"
            Width="390"
            Height="180"
            materialDesign:ButtonAssist.CornerRadius="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Grid.Row="1"
            Grid.Column="1">
            <Button.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="1"
                                  Opacity="0.4" />
            </Button.Effect>
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Избранное"
                                Style="{StaticResource BaseTextBlockStyle}"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="35 0 0 0"
                                FontSize="50"/>
                <Image Source="/Resources/Images/Png/heart.png" 
                       Height="100"/>
            </StackPanel>

        </Button>

        <Button
            Background="#F6F6F6"
            Padding="0"
            BorderThickness="2"
            Margin="0 10 0 0"
            Width="390"
            Height="180"
            materialDesign:ButtonAssist.CornerRadius="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Grid.Row="1"
            Grid.Column="2">

            <Button.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="1"
                                  Opacity="0.4" />
            </Button.Effect>
            
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Покупки"
                        Style="{StaticResource BaseTextBlockStyle}"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="35 0 10 0"
                        FontSize="50"/>
                <Image Source="/Resources/Images/Png/bag.png" 
                        Height="85"
                        Width="75"/>
            </StackPanel>

        </Button>

        <Border Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Background="#F6F6F6"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="15"
                Height="200"
                Margin="10 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Сервис и помощь"
                           Style="{StaticResource BaseTextBlockStyle}"
                           FontSize="50"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <Button Style="{StaticResource BaseButtonStyle}"
                        Content="Написать в поддержку"
                        Grid.Column="0"
                        Grid.Row="1"
                        FontSize="30"
                        Width="330">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="15"
                                          ShadowDepth="1"
                                          Opacity="0.4" />
                    </Button.Effect>
                </Button>

                <Button Style="{StaticResource BaseButtonStyle}"
                        Content="Вопросы и ответы"
                        Grid.Column="1"
                        Grid.Row="1"
                        FontSize="30"
                        Width="330">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="15"
                                          ShadowDepth="1"
                                          Opacity="0.4" />
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>

        <Button
            Background="#F6F6F6"
            Padding="0"
            BorderThickness="2"
            Margin="10 10 0 0"
            Height="75"
            Width="800"
            materialDesign:ButtonAssist.CornerRadius="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2">

            <Button.Effect>
                <DropShadowEffect Color="Black"
                          BlurRadius="15"
                          ShadowDepth="1"
                          Opacity="0.4" />
            </Button.Effect>

            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Корзина"
                            Style="{StaticResource BaseTextBlockStyle}"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="35 0 15 0"
                            FontSize="50"/>
                <Image Source="/Resources/Images/Png/cart.png" 
                        Height="55"
                        Width="55"
                        HorizontalAlignment="Right"/>
            </StackPanel>

        </Button>
    </Grid>
</Page>
