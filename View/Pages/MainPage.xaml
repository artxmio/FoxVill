<Page x:Class="FoxVill.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:FoxVill.ViewModel"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage"
      d:Background="White"
      RenderOptions.BitmapScalingMode="HighQuality"
      
      d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="0"
                    Width="Auto"
                    Margin="0 75 0 0"
                    VerticalAlignment="Top">
            <Button
                Background="Transparent" 
                Width="80"
                Height="80"
                Margin="0"
                Padding="0"
                BorderThickness="2"
                HorizontalAlignment="Right"
                materialDesign:ButtonAssist.CornerRadius="15">

                <Button.ToolTip>
                    Категории товаров
                </Button.ToolTip>
                
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Effect>
                    <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="1"
                                  Opacity="0.4" />
                </Button.Effect>

                <Image Width="40"
                       Source="/Resources/Images/Png/more.png"/>
            </Button>

            <Border BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="15"
                    Margin="10 0 0 0"
                    Height="80">

                <StackPanel Orientation="Horizontal">
                    <TextBox Width="1000" 
                             BorderBrush="Transparent"
                             Margin="10 15 0 10"
                             materialDesign:HintAssist.Hint="Поиск"
                             materialDesign:HintAssist.Foreground="#A1A1A1"
                             FontSize="40"
                             Padding="0"
                             FontWeight="Bold"
                             FontFamily="pack://application:,,,/FoxVill;component/Resources/Fonts/Caveat.ttf#Caveat"
                             materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                             Foreground="Black"
                             CaretBrush="Black"/>

                    <Button
                        Background="Transparent" 
                        Width="60"
                        Height="60"
                        Padding="0"
                        Margin="10 5"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        materialDesign:ButtonAssist.CornerRadius="15">

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Effect>
                            <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="1"
                                  Opacity="0.4" />
                        </Button.Effect>

                        <Image Width="40"
                            Source="/Resources/Images/Png/sort.png"/>
                    </Button>
                </StackPanel>
            </Border>

            <Button
                Background="Transparent" 
                Width="80"
                Height="80"
                Margin="10 0 0 0"
                Padding="0"
                BorderThickness="2"
                HorizontalAlignment="Right"
                materialDesign:ButtonAssist.CornerRadius="15">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.ToolTip>
                    Избранное
                </Button.ToolTip>

                <Image Width="60"
                       Source="/Resources/Images/Png/heart.png"/>
            </Button>

            <Button
                Background="Transparent" 
                Width="80"
                Height="80"
                Margin="10 0 0 0"
                Padding="0"
                BorderThickness="2"
                HorizontalAlignment="Right"
                materialDesign:ButtonAssist.CornerRadius="15">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.ToolTip>
                    Профиль
                </Button.ToolTip>

                <Image Width="55"
                       Source="/Resources/Images/Png/user.png"/>
            </Button>

            <Button
                Background="Transparent" 
                Width="80"
                Height="80"
                Margin="10 0 0 0"
                Padding="0"
                BorderThickness="2"
                HorizontalAlignment="Right"
                materialDesign:ButtonAssist.CornerRadius="15">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.ToolTip>
                    Корзина
                </Button.ToolTip>

                <Image Width="55"
                       HorizontalAlignment="Center"
                       Margin="0"
                       Source="/Resources/Images/Png/cart.png"/>
            </Button>
        </StackPanel>

        <ListView Grid.Row="1"
                  HorizontalAlignment="Center"
                  Padding="0"
                  Margin="0 5 0 0"
                  SelectionMode="Single"
                  ItemsSource="{Binding Products}">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               Margin="20 0 0 0"
                               Width="1500"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="10 10 0 0" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="RenderTransformOrigin" Value="0.7,0.7" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Добавить в корзину"/>
                                <MenuItem Header="Добавить в избранное"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.05" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.05" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>

                    
                </Style>
            </ListView.ItemContainerStyle>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border  
                            Height="350"
                            Width="270"
                            BorderThickness="2"
                            CornerRadius="15"
                            BorderBrush="Black"
                            Background="Transparent"
                            ClipToBounds="True">

                        <StackPanel Orientation="Vertical">
                            <Border BorderBrush="Black"
                                    BorderThickness="2"
                                    Margin="18 18 18 0"
                                    Width="230"
                                    Height="175"
                                    Padding="0">
                                <Image Source="/Resources/Images/Products/example2.jpg"
                                       Stretch="Fill">
                                </Image>
                            </Border>

                            <TextBlock Text="{Binding Title}"
                                       Style="{StaticResource BaseTextBlockStyle}"
                                       Margin="18 0 18 0"
                                       FontSize="25"
                                       TextAlignment="Left"
                                       Height="65"
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Price}"
                                           Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Text="BYN"
                                           Style="{StaticResource BaseTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Height="40"
                                        Width="215"
                                        Margin="0 5 0 0">
                                <Button
                                    Background="Transparent" 
                                    Width="160"
                                    Height="40"
                                    Margin="0"
                                    Padding="0"
                                    BorderThickness="2"
                                    HorizontalAlignment="Right"
                                    materialDesign:ButtonAssist.CornerRadius="10">

                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="Red"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <Button.Content>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="В корзину"
                                                       FontSize="22"
                                                       Margin="0 0 10 0"/>
                                            <Image Width="25"
                                               Source="/Resources/Images/Png/cart.png"/>
                                        </StackPanel>

                                    </Button.Content>

                                </Button>
                                <Button 
                                    x:Name="AddItemToLiked"
                                    Width="40"
                                    Height="40"
                                    Margin="15 0 0 0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    Tag="0"
                                    Click="AddItemToLiked_Click">

                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </ControlTemplate>
                                    </Button.Template>

                                    <Button.Content>
                                        <Image Width="37" Height="37" Margin="0" >
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="/Resources/Images/Png/empty_heart.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" Value="1">
                                                            <Setter Property="Source" Value="/Resources/Images/Png/full_heart.png" />
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.7"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>


</Page>
