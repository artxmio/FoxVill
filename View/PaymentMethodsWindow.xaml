<Window x:Class="FoxVill.View.PaymentMethodsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoxVill.View"
        xmlns:vm="clr-namespace:FoxVill.ViewModel"
        mc:Ignorable="d"
        Title="Способы оплаты" 
        Height="500" 
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent"
        
        d:DataContext="{d:DesignInstance vm:ProfileViewModel}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="15"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                       Text="Способы оплаты"
                       HorizontalAlignment="Center"
                       FontSize="45"
                       Margin="0 10 0 0"/>
            <Button Background="Transparent" 
                    Grid.Column="1"
                    Grid.Row="0"
                Width="30"
                Height="30"
                Padding="0"
                BorderThickness="0"
                HorizontalAlignment="Right"
                Margin="0 10 10 0"
                Click="Button_Click">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="25"
           Source="/Resources/Images/Png/x.png"/>
            </Button>

            <ScrollViewer Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="2">

                <ListView x:Name="PaymentMethodsListView" 
                  Margin="10"
                  ItemsSource="{Binding PaymentMethods, Mode=OneWay}"
                          >

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="10 15 0 0" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="5" Background="#F9F9F9">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                           Text="{Binding CardNumber}" 
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           FontSize="20" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="1" 
                                           Text="{Binding ExpiryDate}" 
                                           FontSize="20" 
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="Gray"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
                                        <Button Content="Удалить" 
                                        Width="100" 
                                            Height="50"
                                        FontSize="20"
                                        Margin="5"
                                                Command="{Binding DataContext.RemovePaymentMethodCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource BaseButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

            <Button Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="2"
                    FontSize="25"
                    Width="150"
                    Height="50"
                    Content="Добавить"
                    Margin="0 0 0 10"
                    Command="{Binding AddNewPaymentMethodCommand}"
                    Style="{StaticResource BaseButtonStyle}"/>
        </Grid>
    </Border>
</Window>
