<Window x:Class="FoxVill.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoxVill.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        d:Height="900" 
        d:Width="1600"
        
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        
        MouseLeftButtonDown="DragModeWindow"
        MouseDoubleClick="ToggleButton_Click">

    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/Png/main_back.png" Stretch="Fill" />
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 10 10 0"
                    Height="Auto">

            <Button x:Name="MinimizedButton"
                Background="Transparent" 
                Width="50"
                Height="50"
                Padding="0"
                BorderThickness="0"
                Click="MinimizedButton_Click">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="30"
                       Source="/Resources/Images/Png/minus.png"/>
            </Button>

            <Button x:Name="ToggleButton"
                    Background="Transparent" 
                    Width="50"
                    Height="50"
                    Padding="0"
                    BorderThickness="0"
                    Click="ToggleButton_Click">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="27"
               Source="/Resources/Images/Png/dwindow.png"/>
            </Button>

            <Button Background="Transparent" 
                Width="50"
                Height="50"
                Padding="0"
                BorderThickness="0"
                Click="CloseButton_Click">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="35"
               Source="/Resources/Images/Png/x.png"/>
            </Button>
        
        </StackPanel>

        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Width="Auto"
               Height="Auto"/>
    </Grid>
</Window>
