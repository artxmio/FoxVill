<Window x:Class="FoxVill.View.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FoxVill.ViewModel"
        xmlns:local="clr-namespace:FoxVill.View"
        mc:Ignorable="d"
        Title="OrderWindow" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance vm:OrderWindowViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="Black"
        BorderThickness="2"
        CornerRadius="15"
        Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Background="Transparent" 
                    Grid.Column="1"
                    Grid.Row="0"
                    Width="30"
                    Height="30"
                    Padding="0"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 0"
                    Click="Button_Click">

                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Image Width="25"
                       Source="/Resources/Images/Png/x.png"/>
            </Button>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Выберите способ оплаты:"
                       FontSize="25" 
                       Margin="0,0,0,10"
                       Style="{StaticResource BaseTextBlockStyle}"/>
                <ComboBox Name="PaymentMethodComboBox" FontSize="14"
                          ItemsSource="{Binding PaymentMethods}"
                          DisplayMemberPath="CardNumber"/>


                <TextBlock Text="Введите CVC-код:" 
                           FontSize="25" 
                           Margin="0,20,0,10"
                           Style="{StaticResource BaseTextBlockStyle}"/>
                <TextBox Name="CvcTextBox" 
                         FontSize="30"
                         TextAlignment="Center"
                         Padding="0"
                         MaxLength="3"
                         Width="80"
                         HorizontalAlignment="Left"
                         d:Text="123"
                         Style="{StaticResource BaseTextBoxStyle}" Height="40"
                         PreviewTextInput="CvcTextBox_PreviewTextInput"/>

                <Button Content="Продолжить" 
                        FontSize="16" 
                        Width="150"
                        Height="40" 
                        Margin="0,20,0,0"
                        Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
